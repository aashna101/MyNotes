<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout"
    tools:context=".Main2Activity"
    android:background="@drawable/gradient"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:textAlignment="center"
        android:background="@drawable/circle_background"
        android:text="MY NOTES" />
    <Button
        android:id="@+id/showOptionsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_gravity="end"
        android:text="+"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:id="@+id/chooseUploadLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:background="#0c0c0c"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:visibility="gone" >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Msg"
            android:background="@drawable/circle_background"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:onClick="msgBtn"
            android:textSize="18sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL"
            android:background="@drawable/circle_background"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:onClick="urlBtn"
            android:textSize="18sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMAGE"
            android:onClick="imageBtn"
            android:background="@drawable/circle_background"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:padding="3dp"
            android:textSize="18sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOCUMENT"

            android:background="@drawable/circle_background"
            android:textStyle="bold"
            android:padding="6dp"
            android:layout_margin="3dp"
            android:textSize="18sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIDEO"

            android:background="@drawable/circle_background"
            android:textStyle="bold"
            android:padding="3dp"
            android:layout_margin="3dp"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/msgLayout"
        android:visibility="visible">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msgTxt"
            android:textSize="19sp"
            android:background="#fdfdfd"
            android:hint="Type message to your students"
            android:inputType="textLongMessage"
            android:padding="3sp"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/uploadMsg_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="upload"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_background"
            android:layout_marginTop="5dp"
            android:onClick="UploadMSgBtn"
            android:textStyle="bold"
            android:textSize="20sp"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/urlLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

    <EditText
        android:id="@+id/URL_Txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="#fffbfb"
        android:hint="paste url here!!!"
        android:inputType="textUri"
        />
    <EditText
        android:id="@+id/description_Txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="#fffbfb"
        android:hint="Description!!!"
        android:inputType="textLongMessage"
        />
        <Button
            android:id="@+id/uploadUrl_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="upload"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_background"
            android:layout_marginTop="5dp"
            android:onClick="UploadUrlBtn"
            android:textSize="20sp"
            />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/progressLayout"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="3dp"
        android:id="@+id/progressTxt"

        />
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:progressBackgroundTint="#6e4b33"
        android:progressTintMode="src_over"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="100"
        android:progress="10"
        android:secondaryProgress="50"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/imageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:onClick="getImageBtn"
            android:src="@android:drawable/ic_input_add"/>
        <EditText
            android:id="@+id/ImageDesc_Txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="#fffbfb"
            android:hint="Description!!!"
            android:inputType="textLongMessage"
            />
        <Button
            android:id="@+id/uploadImage_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="upload"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_background"
            android:layout_marginTop="5dp"
            android:onClick="UploadImageBtn"
            android:textSize="20sp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/checkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check"
        android:background="@drawable/circle_background"
        android:layout_marginTop="3dp"
        android:gravity="center"
        />


</LinearLayout>